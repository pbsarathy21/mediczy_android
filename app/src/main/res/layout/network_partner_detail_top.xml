<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_np_detail_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_np_detail_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/Margin_45"
                android:layout_marginRight="@dimen/Margin_45"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_np_detail_company_name"
                android:layout_marginTop="@dimen/Margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_np_detail_rating_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/Margin_45"
                    android:text=""
                    android:textColor="@color/light_gray_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_np_detail_rating_count1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_np_detail_rating_count"
                    android:text=""
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColor="@color/blue_1"
                    android:textSize="18sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar_np_detail_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_5"
                android:layout_toRightOf="@+id/tv_np_detail_rating_count_total"
                android:max="0"
                android:rating="3.5"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tv_np_detail_rating_count_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/Margin_6"
                android:layout_marginLeft="@dimen/Margin_15"
                android:elevation="@dimen/elevation"
                android:padding="@dimen/Margin_5"
                android:text="Rate us!"
                android:textColor="@color/blue_1"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin_0"
            android:orientation="horizontal">

            <app.mediczy_com.utility.TextViewFont
                android:id="@+id/tv_np_detail_offer_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_15"
                android:text="@string/License"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_np_detail_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_45"
                android:layout_toRightOf="@+id/tv_np_detail_offer_icon"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <app.mediczy_com.utility.TextViewFont
                android:id="@+id/tv_np_detail_timing_value_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_15"
                android:text="@string/np_timing"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_np_detail_timing_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_15"
                android:layout_toRightOf="@+id/tv_np_detail_timing_value_icon"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <app.mediczy_com.utility.TextViewFont
                android:id="@+id/tv_np_detail_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_15"
                android:text="@string/np_address"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_np_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_30"
                android:layout_toRightOf="@+id/tv_np_detail_address_icon"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_web_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <app.mediczy_com.utility.TextViewFont
                android:id="@+id/tv_np_detail_website_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_15"
                android:text="@string/np_website"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_np_detail_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_45"
                android:layout_toRightOf="@+id/tv_np_detail_website_icon"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_np_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <app.mediczy_com.utility.TextViewFont
                android:id="@+id/tv_np_detail_desc_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/Margin_15"
                android:text="@string/offers"
                android:textColor="@color/black"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/tv_np_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin_4"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_25"
                android:layout_toRightOf="@+id/tv_np_detail_desc_icon"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_np_detail_desc_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/Margin_5"
                android:layout_marginRight="@dimen/Margin_15"
                android:layout_below="@+id/tv_np_detail_desc"
                android:layout_alignParentRight="true"
                android:text="View Offers"
                android:textColor="@color/blue_1"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_map"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mapView_np_detail"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/Margin_15"
                android:layout_marginRight="@dimen/Margin_15" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_card_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Margin_10"
            android:layout_marginTop="@dimen/Margin_15"
            android:background="@color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_np_detail_card_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/Margin_15"
                android:background="@color/white"
                android:drawableTop="@drawable/np_call"
                android:text="Call"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/btn_np_detail_card_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/Margin_15"
                android:background="@color/white"
                android:drawableTop="@drawable/np_directions"
                android:text="Directions"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/btn_np_detail_card_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:drawableTop="@drawable/np_chat"
                android:text="Chat"
                android:textColor="@color/black"></Button>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_np_detail_invoice_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margin_5"
            android:layout_marginRight="@dimen/Margin_5"
            android:layout_marginTop="@dimen/Margin_15"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editText_np_detail_invoice_amount_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_np_detail_invoice_amount"
                    style="@style/CustomEditText_Register"
                    android:ems="10"
                    android:hint="@string/ed_np_invoice_amount"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button_np_detail_invoice_amount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/editText_np_detail_invoice_amount_lay"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border_blue"
                android:elevation="@dimen/elevation"
                android:text="Get Offer Code"
                android:textColor="@color/white"
                android:textSize="@dimen/Text_size_16"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>


