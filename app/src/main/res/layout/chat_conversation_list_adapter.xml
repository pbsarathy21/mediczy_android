<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_left_chat_con_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/rl_left_chat_con_list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <app.mediczy_com.utility.CircularImageView
                android:id="@+id/iv_left_chat_con_msg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:contentDescription="@string/description"
                android:src="@drawable/no_image_plain"
                app:civ_border="true"
                app:civ_borderColor="@color/blue_1"
                app:civ_borderWidth="3dp"
                app:civ_selector="false"
                app:civ_selectorStrokeWidth="3dp"
                app:civ_shadow="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:layout_marginTop="@dimen/Margin_20"
                android:layout_marginLeft="@dimen/Margin_10"/>

            <TextView
                android:id="@+id/tv_logo_chat_name"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/Margin_14"
                android:layout_marginLeft="@dimen/Margin_10"
                android:background="@drawable/circle_chat_txt"
                android:gravity="center"
                android:maxLines="1"
                android:text="p"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_left_chat_con_list1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_left_chat_con_list1">

            <TextView
                android:id="@+id/tv_left_chat_con_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/Margin_10"
                android:layout_marginRight="@dimen/Margin_10"
                android:layout_marginTop="@dimen/Margin_12"
                android:layout_toLeftOf="@+id/tv_left_chat_con_list_time"
                android:maxLines="1"
                android:text="Prithivi"
                android:textColor="@color/black"
                android:textSize="@dimen/Text_size_17" />

            <TextView
                android:id="@+id/tv_left_chat_con_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/Margin_18"
                android:layout_marginTop="@dimen/Margin_17"
                android:maxLines="1"
                android:text="Yesterday"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/Text_size_12" />

            <RelativeLayout
                android:id="@+id/rl_left_chat_con_list_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_left_chat_con_list_name">

                <TextView
                    android:id="@+id/tv_left_chat_con_list_cat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Margin_10"
                    android:layout_marginRight="@dimen/Margin_10"
                    android:layout_marginTop="@dimen/Margin_4"
                    android:maxLines="1"
                    android:text="Doctor"
                    android:visibility="visible"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/Text_size_14" />

                <TextView
                    android:id="@+id/tv_left_chat_con_list_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_left_chat_con_list_cat_value"
                    android:layout_marginLeft="@dimen/Margin_10"
                    android:layout_marginTop="@dimen/Margin_6"
                    android:layout_toLeftOf="@+id/iv_left_chat_con_list_msg_un_readed"
                    android:layout_toStartOf="@+id/iv_left_chat_con_list_msg_un_readed"
                    android:singleLine="true"
                    android:text="This is the sample message for testing the mediczy app"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/Text_size_15" />

                <ImageView
                    android:id="@+id/iv_left_chat_con_list_msg_un_readed"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_left_chat_con_list_cat_value"
                    android:layout_marginRight="@dimen/Margin_15"
                    android:layout_marginTop="@dimen/Margin_8"
                    android:background="@drawable/unreaded_msg"
                    android:gravity="center_vertical|left"
                    android:visibility="visible" />

                <View
                    android:id="@+id/SplitLine_chat_con_list"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_below="@+id/tv_left_chat_con_list_msg"
                    android:layout_marginLeft="@dimen/Margin_10"
                    android:layout_marginRight="@dimen/Margin_2"
                    android:layout_marginTop="@dimen/Margin_17"
                    android:background="@color/gray_light" />

                <ImageView
                    android:id="@+id/iv_left_chat_con_list_msg"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_below="@+id/tv_left_chat_con_list_cat_value"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/Margin_5"
                    android:layout_marginRight="@dimen/Margin_80"
                    android:layout_marginTop="@dimen/Margin_4"
                    android:gravity="center_vertical|left"
                    android:visibility="gone" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
