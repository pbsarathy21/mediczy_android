<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_register_first_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editText_register_doctor_unsernme_ti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText_register_doctor_unsernme"
                style="@style/CustomEditText_Register"
                android:ems="10"
                android:hint="UserName"
                android:inputType="text"
                android:maxLength="10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editText_register_doctor_psd_ti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_register_doctor_unsernme_ti"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/editText_register_doctor_psd"
                style="@style/CustomEditText_Register"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="10" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_register_doctor_login"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_below="@+id/editText_register_doctor_psd_ti"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_border_blue"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView_register_doctor_login_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_register_doctor_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/doctor_login_help_title"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_register_doctor_login_help_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_register_doctor_login_help"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/doctor_login_help"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>