<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_insurance_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/Margin_5"
        android:layout_marginLeft="@dimen/Margin_5"
        android:layout_marginRight="@dimen/Margin_5"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/elevation">

        <RelativeLayout
            android:id="@+id/relative_view_insurance_adapter_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/relative_view_insurance_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Margin_2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/imageView_insurance_km"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/no_image" />

                <TextView
                    android:id="@+id/textview_insurance_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_insurance_km"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="20 Km"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_view_insurance_adapter_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/Margin_10"
                android:layout_toRightOf="@+id/relative_view_insurance_adapter">


                <TextView
                    android:id="@+id/textview_insurance_cmp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/imageView1_insurance_comp_like"
                    android:text="Prithiviraj Hospital"
                    android:textColor="@color/color_1"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_vd_insurance_comp_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textview_insurance_cmp_name"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/imageView1_insurance_comp_like"
                    android:layout_toStartOf="@+id/imageView1_insurance_comp_like"
                    android:text="Muthu sami mudali street sainathapuram, vellore-1"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_vd_insurance_comp_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textview_vd_insurance_comp_address"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/imageView1_insurance_comp_call"
                    android:text="vellore-1"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView1_insurance_comp_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/textview_vd_insurance_comp_offer"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calls" />

                <ImageView
                    android:id="@+id/imageView1_insurance_comp_like"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_margin="@dimen/Margin_6"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/guarantee" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>