<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_layout_pop_up_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/relative_layout_pop_up_cancel_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_pop_up__pop_up_cancel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:text="Cancel Payment"
                android:textColor="#0080ff"
                android:textSize="18sp" />

            <View
                android:id="@+id/view_textView_pop_up__pop_up_remove_payment"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_pop_up__pop_up_cancel_title"
                android:layout_marginTop="18dp"
                android:background="#0080ff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_remove_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_pop_up_cancel_all" >

            <TextView
                android:id="@+id/textView1_remove_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="Are you sure you want to cancel the payment ?"
                android:textColor="#575757"
                android:textSize="18sp" />

           
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_relative_layout_pop_up_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relative_layout_remove_payment" >

            <View
                android:id="@+id/view_pop_up_cancel_payment"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cdcdcd" />

            <RelativeLayout
                android:id="@+id/relative_layout_view_pop_up_cancel_payment"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view_pop_up_cancel_payment" >

                <View
                    android:id="@+id/view3_remove_payment"
                    android:layout_width="0.5dip"
                    android:layout_height="wrap_content"                  
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:background="#cdcdcd" />

                <TextView
                    android:id="@+id/textView_pop_up_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/view3_remove_payment"
                    android:gravity="center"
                    android:text="Okay"
                    android:textColor="#575757"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewpop_up_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/view3_remove_payment"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#575757"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>