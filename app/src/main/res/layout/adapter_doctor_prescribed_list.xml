<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_doctor_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/Margin_5"
        android:layout_marginLeft="@dimen/Margin_5"
        android:layout_marginRight="@dimen/Margin_5"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/elevation">

        <RelativeLayout
            android:id="@+id/relative_view_doctor_prescribed_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relative_view_doctor_prescribed_adapter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white">

            <app.mediczy_com.utility.CircularImageView
                android:id="@+id/imageView_adapter_doctor_prescribed_photo"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/description"
                android:src="@drawable/no_image_plain"
                app:civ_border="true"
                app:civ_borderColor="@color/blue_1"
                app:civ_borderWidth="4dp"
                app:civ_selector="true"
                app:civ_selectorColor="@color/blue_1"
                app:civ_selectorStrokeColor="@color/blue_1"
                app:civ_selectorStrokeWidth="4dp"
                android:visibility="gone"
                app:civ_shadow="true" />

            <TextView
                android:id="@+id/tv_desc_first_name_adapter"
                android:layout_width="62dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_profile_txt"
                android:gravity="center"
                android:maxLines="1"
                android:text="p"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible"/>
        </RelativeLayout>

            <TextView
                android:id="@+id/textview_adapter_doctor_prescribed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="Diploma"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/textview_adapter_doctor_prescribed_date"
                android:layout_toRightOf="@+id/relative_view_doctor_prescribed_adapter1"
                android:text="PrithiviRaj"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_adapter_doctor_prescribed_name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/relative_view_doctor_prescribed_adapter1"
                android:singleLine="true"
                android:maxLength="10"
                android:text="This is for testing"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/relative_view_doctor_prescribed_adapter1"
                android:layout_below="@+id/textView_adapter_doctor_prescribed_study"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Thihs is for testing perpose"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_desc_empty"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_below="@+id/textView_adapter_doctor_prescribed_desc" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>