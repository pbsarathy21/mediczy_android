<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_patient_form_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <app:android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_patient_form_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/elevation"
        app:theme="@style/AppTheme_ToolBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:paddingTop="?attr/actionBarSize">

        <ScrollView
            android:id="@+id/ScrollView_patient_form_detail_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/activity_patient_form_detail_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">


                <RelativeLayout
                    android:id="@+id/rl_form_detail_basic_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/Margin_10">

                    <TextView
                        android:id="@+id/tv_form_detail_basic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Margin_10"
                        android:layout_centerHorizontal="true"
                        android:text="Patient Basic Info"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/Text_size_18"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/CardView_form_detail_basic_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_form_detail_basic_info"
                        android:layout_margin="@dimen/Margin_10"
                        android:background="@color/white"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardElevation="@dimen/elevation_4">

                        <RelativeLayout
                            android:id="@+id/rl_form_detail_basic_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@color/white">

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_patient_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">

                                <TextView
                                    android:id="@+id/tv_form_detail_patient_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Patient Name :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_patient_name_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_patient_name"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_patient_mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_patient_name"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_patient_mobile_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Patient Number :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_patient_mobile_number_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_patient_mobile_number"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/rl_form_detail_appointment_for"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_patient_mobile_number"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_appointment_for"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Appointment for :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_tv_appointment_for_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_appointment_for"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_issue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_appointment_for"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_issue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Issue :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_issue_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_marginRight="@dimen/Margin_5"
                                    android:layout_marginStart="21dp"
                                    android:layout_toEndOf="@+id/tv_form_detail_issue"
                                    android:layout_toRightOf="@+id/tv_form_detail_issue"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_issue"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gender :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_gender_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_gender"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_gender"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Age :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_age_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_age"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_age"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Height :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_height_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_height"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_height"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Weight :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_weight_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_weight"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_weight"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="City :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_city_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_city"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_transaction_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_city"
                                android:layout_marginBottom="@dimen/Margin_10"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_transaction_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Transaction Status :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_transaction_status_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_transaction_status"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_form_detail_med_doctor_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/rl_form_detail_basic_info_1"
                    android:layout_marginTop="@dimen/Margin_10">

                    <TextView
                        android:id="@+id/tv_form_detail_doctor_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/Margin_10"
                        android:text="Doctor Info"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/Text_size_18"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/CardView_form_detail_doctor_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_form_detail_doctor_info"
                        android:layout_margin="@dimen/Margin_10"
                        android:background="@color/white"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardElevation="@dimen/elevation_4">

                        <RelativeLayout
                            android:id="@+id/rl_form_detail_doctor_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@color/white">

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_catergory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">


                                <TextView
                                    android:id="@+id/tv_form_detail_tv_form_detail_catergory_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_catergory"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_catergory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="Catergory :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_doctor_reply"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_catergory"
                                android:layout_marginBottom="@dimen/Margin_10"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">

                                <TextView
                                    android:id="@+id/tv_form_detail_doctor_reply"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Doctor Reply :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_doctor_reply_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_doctor_reply"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_form_detail_med_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/rl_form_detail_med_doctor_1"
                    android:layout_marginTop="@dimen/Margin_10">

                    <TextView
                        android:id="@+id/tv_form_detail_med_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/Margin_10"
                        android:text="Medical Info"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/Text_size_18"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/CardView_form_detail_med_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_form_detail_med_info"
                        android:layout_margin="@dimen/Margin_10"
                        android:background="@color/white"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardElevation="@dimen/elevation_4">

                        <RelativeLayout
                            android:id="@+id/rl_form_detail_med_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@color/white">

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_previous_diagnosed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">

                                <TextView
                                    android:id="@+id/tv_form_detail_previous_diagnosed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Previous Diagnosed :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_previous_diagnosed_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_previous_diagnosed"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_medications"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_previous_diagnosed"
                                android:layout_marginLeft="@dimen/Margin_10"
                                android:layout_marginTop="@dimen/Margin_15">

                                <TextView
                                    android:id="@+id/tv_form_detail_medications"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Medications :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_medications_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_medications"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_allergies"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_medications"
                                android:layout_marginBottom="@dimen/Margin_10"
                                android:layout_marginLeft="@dimen/Margin_5"
                                android:layout_marginTop="@dimen/Margin_15">

                                <TextView
                                    android:id="@+id/tv_form_detail_allergies"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Allergies :"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <TextView
                                    android:id="@+id/tv_form_detail_allergies_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/Margin_20"
                                    android:layout_toRightOf="@+id/tv_form_detail_allergies"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/Text_size_16" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_form_detail_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_form_detail_allergies"
                                android:layout_marginBottom="@dimen/Margin_10"
                                android:layout_marginLeft="@dimen/Margin_5">

                                <TextView
                                    android:id="@+id/tv_form_detail_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Image"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/Text_size_16" />

                                <ImageView
                                    android:id="@+id/tv_form_detail_image_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="180dp"
                                    android:layout_margin="@dimen/Margin_5"
                                    android:layout_below="@+id/tv_form_detail_image" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_form_detail_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rl_form_detail_med_info_1" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>