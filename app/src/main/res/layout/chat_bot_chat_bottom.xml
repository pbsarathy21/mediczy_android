<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_bot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:background="@color/white"

    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linear_ed"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/chat_bot_cardview">


            <EditText
                android:id="@+id/edit_send"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_send"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_send_button">


            <TextView
                android:id="@+id/text_send"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_yes"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_option_view">


            <TextView
                android:id="@+id/text_yes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_no"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_option_view">


            <TextView
                android:id="@+id/text_no"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_second_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linear_second_yes"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_option_view">


            <TextView
                android:id="@+id/text_second_yes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_second_no"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_option_view">


            <TextView
                android:id="@+id/text_second_no"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_dont"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/chat_bot_option_view"
            android:visibility="visible">


            <TextView
                android:id="@+id/text_dont"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Don't Know"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/chat_bot_option_view"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_rep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:text="View Report"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linear_male"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_option_view">


            <TextView
                android:id="@+id/text_male"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Male"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_female"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_bot_option_view">


            <TextView
                android:id="@+id/text_female"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Female"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>