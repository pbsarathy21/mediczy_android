<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_home_adapter"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/Margin_5"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/relative_view_home_adapter">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView_adapter_home_type"
            android:layout_alignParentTop="true"
            android:background="@drawable/no_image_plain"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/Text_size_22"
            android:layout_margin="@dimen/Margin_5"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/textView_adapter_home_type_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:maxLines="1"
            android:textColor="@color/material_blue_grey_950"
            android:background="@drawable/rounded_corner"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/Margin_10"
            android:id="@+id/textView_adapter_home_type_count" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>