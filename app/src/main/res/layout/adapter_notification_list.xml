<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_doctor_adapter_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/Margin_5"
        android:layout_marginLeft="@dimen/Margin_5"
        android:layout_marginRight="@dimen/Margin_5"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/elevation">

        <RelativeLayout
            android:id="@+id/relative_view_doctor_prescribed_adapter_noti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/textview_adapter_doctor_prescribed_date_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_name_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textview_adapter_doctor_prescribed_date_noti"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relative_view_doctor_prescribed_adapter_noti_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/textView_adapter_doctor_prescribed_name_noti"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/noti_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <VideoView
                    android:id="@+id/notification_video_viewdapter_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <WebView
                    android:id="@+id/notification_webView_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/noti_image_play"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/file_attach"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_desc_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relative_view_doctor_prescribed_adapter_noti_img"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_prescribed_desc_empty_noti"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_below="@+id/textView_adapter_doctor_prescribed_desc_noti" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>