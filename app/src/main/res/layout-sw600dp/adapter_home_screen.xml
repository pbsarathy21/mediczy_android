<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_home_adapter"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/Margin_5"
        android:layout_marginLeft="@dimen/Margin_5"
        android:layout_marginRight="@dimen/Margin_5"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:id="@+id/relative_view_home_adapter">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView_adapter_home_type"
            android:layout_alignParentTop="true"
            android:src="@drawable/no_image_plain"/>

        <RelativeLayout
            android:id="@+id/rl_adapter_book_appo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3358595B"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView_adapter_book_appo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Book Appointment"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3358595B"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/textView_adapter_home_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:text=""
                android:gravity="center"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView_adapter_home_type_count"/>


            <TextView
                android:id="@+id/textView_adapter_home_type_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_corner"
                android:maxLines="1"
                android:text="3"
                android:textColor="@color/material_blue_grey_950"
                android:textSize="12sp" />/>

        </RelativeLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>