<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_doctor_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/Margin_5"
        android:layout_marginLeft="@dimen/Margin_5"
        android:layout_marginRight="@dimen/Margin_5"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/elevation">

        <RelativeLayout
            android:id="@+id/relative_view_doctor_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/white">


            <app.mediczy_com.utility.CircularImageView
                android:id="@+id/imageView_adapter_doctor_photo"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/description"
                android:background="@color/white"
                android:src="@drawable/no_image_plain"
                app:civ_border="true"
                app:civ_borderColor="@color/blue_1"
                app:civ_borderWidth="4dp"
                app:civ_selector="false"
                app:civ_selectorStrokeWidth="4dp"
                app:civ_shadow="false" />


            <TextView
                android:id="@+id/textView_adapter_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/imageView_adapter_status"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/blue_1"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_adapter_doctor_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_adapter_doctor_name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_adapter_doctor_study"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo"
                android:gravity="left"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_adapter_doctor_type"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_adapter_doctor_exp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_adapter_doctor_available_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_adapter_doctor_available"
                android:layout_marginBottom="@dimen/Margin_10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView_adapter_status"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/video_calling" />

            <TextView
                android:id="@+id/textView_adapter_doctor_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView_adapter_doctor_exp"
                android:layout_marginBottom="@dimen/Margin_5"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/textView_adapter_doctor_available"
                android:gravity="right"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>