<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_relative_layout_doctor_adapter_spa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/relative_view_doctor_adapter_spa">

            <ImageView
                android:id="@+id/imageView_adapter_doctor_photo_spa"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/description"
                android:src="@drawable/no_image_plain" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear skin"
                android:textSize="17sp"
                android:textColor="@color/blue_1"
                android:textStyle="bold"
                android:singleLine="true"
                android:id="@+id/textView_adapter_doctor_name_spa"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/imageView_adapter_status_spa"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo_spa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reci_ road Banglore"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:id="@+id/textView_adapter_doctor_study_spa"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView_adapter_doctor_name_spa"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo_spa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female Only"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:id="@+id/textView_adapter_doctor_type_spa"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView_adapter_doctor_study_spa"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo_spa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON - SON"
                android:textSize="15sp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:id="@+id/textView_adapter_doctor_exp_spa"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView_adapter_doctor_type_spa"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo_spa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Now"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:id="@+id/textView_adapter_doctor_available_spa"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/textView_adapter_doctor_exp_spa"
                android:layout_toRightOf="@+id/imageView_adapter_doctor_photo_spa" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView_adapter_status_spa"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/calls"
                android:layout_below="@+id/textView_adapter_doctor_type_spa"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>