        android:layout_marginBottom="@dimen/Margin_5"
        android:layout_marginLeft="@dimen/Margin_5"
        android:layout_marginRight="@dimen/Margin_5"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relative_view_cat_adapter"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white">

<!--            <app.mediczy_com.utility.CircularImageView
                android:id="@+id/imageView_adapter_cat_image"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:contentDescription="@string/description"
                android:src="@drawable/no_image_plain"
                app:civ_border="true"
                app:civ_borderColor="@color/blue_1"
                app:civ_borderWidth="4dp"
                app:civ_selector="false"
                app:civ_selectorStrokeWidth="4dp"
                app:civ_shadow="false" />-->

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imageView_adapter_cat_image"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:contentDescription="@string/description"
                android:src="@drawable/no_image_plain"
                app:civ_border="true"
                app:civ_borderColor="@color/blue_1"
                app:civ_borderWidth="4dp"
                app:civ_selector="false"
                app:civ_selectorStrokeWidth="4dp"
                app:civ_shadow="false" />

            <TextView
                android:id="@+id/textView_adapter_np_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/Margin_5"
                android:layout_below="@+id/imageView_adapter_cat_image"
                android:singleLine="true"
                android:text="Fitness"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </RelativeLayout>
