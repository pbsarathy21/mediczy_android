<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_layout_appoinment_conform_all_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/relative_layout_app_conform_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_pop_up_edit_profile_remove_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:text="Appointment Confirmation"
                android:textColor="@color/blue_1"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/view_edit_pop_up_edit_remove_payment"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_pop_up_edit_profile_remove_payment_title"
                android:layout_marginTop="18dp"
                android:background="#0080ff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_app_conform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_app_conform_all" >

            <TextView
                android:id="@+id/textView1_app_conform_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="Are you sure you want to cancel the payment ?"
                android:textColor="@color/gray"
                android:textSize="16sp" />

           
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_app_conform_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relative_layout_app_conform" >

            <View
                android:id="@+id/view_profileview1_edit_button_remove_payment"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cdcdcd" />

            <RelativeLayout
                android:id="@+id/relative_layout_app_conform_1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view_profileview1_edit_button_remove_payment" >

                <View
                    android:id="@+id/view3_remove_app_conform"
                    android:layout_width="0.5dip"
                    android:layout_height="wrap_content"                  
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:background="#cdcdcd" />

                <TextView
                    android:id="@+id/textView_app_conform_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/view3_remove_app_conform"
                    android:gravity="center"
                    android:text="CONTINUE"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_app_conform_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/view3_remove_app_conform"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>